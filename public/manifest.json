{
  "name": "cREST Client",
  
  "version": "4.0.1",
  
  "manifest_version": 3,
  "description": "RESTful service tester.",
    "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  
  "action": {
  	"default_icon": "images/icon.png",
    "default_title": "Rest Client"
  },
  "background": {
    "service_worker": "serviceWorker/background.js",
    "type": "module"
  },
  "permissions": ["management", "cookies"],
  "host_permissions": ["http://*/*", "https://*/*", "file:///*/*"]
}